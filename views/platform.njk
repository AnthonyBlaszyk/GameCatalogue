{% extends "layout.njk" %}

{% block content %}
  <div class="displayPlatform">
    <ul>
      {% for platform in platformsList %}
        <li><a href="/platform/{{platform.slug}}">{{platform.name}}</a></li>
      {% endfor %}
    </ul>
  </div>
  <a href="/platform?page={{pageNumber-1}}">previous page</a>
  <a href="/platform?page={{pageNumber+1}}">next page</a>
{% endblock %}
