{% extends "layout.njk" %}

{% block content %}
  <div class="displayPlatform">
      {% for platform in platformsList %}
      <div class="platform">
        <p><a href="/platform/{{platform.slug}}">{{platform.name}}</a></p>
        <img src="{{platform.logo.url}}" alt="No logo">
      </div>
      {% endfor %}
  </div>
  <a href="/platform?page={{pageNumber-1}}">previous page</a>
  <a href="/platform?page={{pageNumber+1}}">next page</a>
{% endblock %}
