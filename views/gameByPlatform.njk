{% extends "layout.njk" %}


{% block content %}
 <div class="displayGame">
    {% for game in gamesByPlatform.games %}
      <div class="game">
        <p>{{ game.name}}</p>
        <img src="{{ game.cover.url}}" alt="No cover">
        <p><a href="/games/{{game.slug}}">More infos</a></p>
      </div>
    {% endfor %}
  </div>
  <a href="/platform/{{slug}}/?pages={{pages-1}}">previous page</a>
  <a href="/platform/{{slug}}/?pages={{pages+1}}">next page</a>
{% endblock %}
