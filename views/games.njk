{% extends "layout.njk" %}

{% block content %}
  <div class="displayGame">
      {% for game in gameList %}
        <div style="background-image:url('{{ game.cover.url}}')" class="game">
          <p class="gameTitle"><a href="/games/{{game.slug}}">{{ game.name}}</a></p>
        </div>
      {% endfor %}
  </div>

  <nav>
    <ul class="pagination justify-content-center">
      {% if pageNumber>1 %}
        <li class="page-item"><a class="page-link" href="/games?page={{pageNumber-1}}">previous page</a></li>
        {% if pageNumber>2 %}
        <li class="page-item"><a class="page-link" href="/games?page={{pageNumber-2}}">{{pageNumber-2}}</a></li>
        {% endif %}
        <li class="page-item"><a class="page-link" href="/games?page={{pageNumber-1}}">{{pageNumber-1}}</a></li>
      {% endif %}

      <li class="page-item active"> <span class="page-link">{{pageNumber}}</span></li>

      {% if pageNumber<4058%}
        <li class="page-item"><a class="page-link" href="/games?page={{pageNumber+1}}">{{pageNumber+1}}</a></li>
        {% if pageNumber<4057%}
          <li class="page-item"><a class="page-link" href="/games?page={{pageNumber+2}}">{{pageNumber+2}}</a></li>
        {% endif %}
        <li class="page-item"><a class="page-link" href="/games?page={{pageNumber+1}}">next page</a></li>
      {% endif %}
    </ul>
  </nav>
{% endblock %}
